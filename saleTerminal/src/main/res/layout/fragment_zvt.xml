<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:isScrollContainer="false"
    android:nestedScrollingEnabled="true"
    android:orientation="vertical"
    android:touchscreenBlocksFocus="true"
    android:weightSum="9.5"
    tools:context=".ui.zvt.ZvtFragment">
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/zvt_sub_fragment"
        class="de.lavego.saleTerminal.ui.zvt.AmountFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="2.5"
        android:text="data"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />
    <TextView
        android:id="@+id/intermediate_status"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="1.0"
        android:gravity="center"
        android:text="intermediate_status"
        android:textAppearance="?textAppearanceBody1"
        tools:ignore="HardcodedText" />
    <TextView
        android:id="@+id/completion_status"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="6.0"
        android:fadeScrollbars="false"
        android:fontFamily="monospace"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical"
        android:text="completion"
        android:textSize="14sp"
        tools:ignore="HardcodedText" />
</LinearLayout>
